@model WmsCore.Models.Document

@{
    ViewData["Title"] = "Details";
    int i = 0;
}

<h1>Details</h1>

<div>
    <h4>Document</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OperationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OperationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contractor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contractor.Name)
        </dd>
    </dl>
</div>
<h4>Pozycje dokumentu:</h4>
<table class="table">
    <thead>
        <tr>
            <th>Lp.</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.Code)</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.Name)</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.NetPrice)</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.Category.Name)</th>
            <th>Ilość</th>
        </tr>
    </thead>

    <tbody>
        @{
            i++;
        } 
        @foreach (var position in Model.DocumentItems) 
        {
            <tr>
                <td>@i</td>
                <td>@position.Article.Code</td>
                <td>@position.Article.Name</td>
                <td>@position.Article.NetPrice</td>
                <td>@position.Article.Category.Name</td>
                <td>@position.Quantity</td>
            </tr>
            i++;
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DocumentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
