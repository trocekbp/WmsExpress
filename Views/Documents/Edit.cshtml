@model WmsCore.Models.Document

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DocumentId" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" readonly />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostInvoiceNumber" class="control-label"></label>
                <input asp-for="CostInvoiceNumber" class="form-control" />
                <span asp-validation-for="CostInvoiceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control"  readonly />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" readonly/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OperationDate" class="control-label"></label>
                <input asp-for="OperationDate" class="form-control" />
                <span asp-validation-for="OperationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalNetAmount" class="control-label"></label>
                <input asp-for="TotalNetAmount"  class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="TotalGrossAmount" class="control-label"></label>
                <input asp-for="TotalGrossAmount"  class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractorId" class="control-label"></label>
                <select asp-for="ContractorId" class="form-control" asp-items="ViewBag.ContractorId"></select>
                <span asp-validation-for="ContractorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4>Pozycje dokumentu:</h4>
<table class="table">
    <thead>
        <tr>
            <th>Lp.</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.Code)</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.Name)</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.NetPrice)</th>
            <th>@Html.DisplayNameFor(m => m.DocumentItems.FirstOrDefault().Article.Category.Name)</th>
            <th>Ilość</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @{
            int i = 1;
        }
        @foreach (var position in Model.DocumentItems)
        {
            <tr>
                <td>@i</td>
                <td>@position.Article.Code</td>
                <td>@position.Article.Name</td>
                <td>@position.Article.NetPrice</td>
                <td>@position.Article.Category.Name</td>
                <td>@position.Quantity</td>
                <td><a asp-action="Delete" asp-controller="DocumentItems" asp-route-id="@position.DocumentItemId" asp-route-docID="@Model.DocumentId">Usuń</a></td>
            </tr>
            i++;
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
